<div class="form">
  <form>
    <input type="text" id="name" name="name" placeholder="Dit navn" required />
    <input type="text" id="mail" name="mail" placeholder="Din E-mail" required />
    <textarea id="message" name="message" placeholder="Besked" cols="30" rows="6"></textarea>
    <div class="button-container">
      <button type="submit" value="Send">Send</button>
    </div>
  </form>
</div>

<style>
  /* FORMS */
  form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 10px;
    margin: 100px;
    font-family: "Hind Madurai";
    width: 400px;
    background-color: #e9e9e9;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  }

  form label {
    font-weight: bold;
    color: #494242;
  }

  form input,
  form textarea {
    padding: 10px;
    border-radius: 10px;
    border: none;
  }

  .button-container {
    display: flex;
    justify-content: center;
  }

  form button {
    font-weight: bold;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    background-color: #8aaf9d;
    border-radius: 10px;
    border: none;
    padding: 10px;
    color: white;
    width: 108px;
    margin-top: 15px;
  }

  @media screen and (max-width: 600px) {
    form {
      width: 80%;
      padding: 10px;
      margin: 50px;
    }
  }
</style>
