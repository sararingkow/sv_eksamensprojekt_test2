---
const { title, category } = Astro.props;
import Header from "../components/Header.astro";
import CardOverview from "../components/CardOverview.astro";
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="utf-8" />
    <script src="https://kit.fontawesome.com/0b02d067e0.js" crossorigin="anonymous"></script>

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <footer></footer>
  </body>
</html>

